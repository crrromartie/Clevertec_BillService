<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error/error404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/jsp/error/error500.jsp</location>
    </error-page>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <servlet>
        <servlet-name>mainServlet</servlet-name>
        <servlet-class>ru.clevertec.bill.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mainServlet</servlet-name>
        <url-pattern>/CandyShop</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>ru.clevertec.bill.controller.listener.SessionListenerImpl</listener-class>
    </listener>
    <listener>
        <listener-class>ru.clevertec.bill.controller.listener.SessionAttributeAddListenerImpl</listener-class>
    </listener>
</web-app>